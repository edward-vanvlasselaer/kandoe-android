<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cardlist_item"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/margin_card"
    android:layout_marginRight="@dimen/margin_card"
    android:background="@drawable/custom_card_item"
    android:minHeight="130dp"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/cardlist_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/carditem_txt_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/carditem_btn_upvote"
            android:layout_alignBottom="@+id/carditem_btn_upvote"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@+id/carditem_btn_upvote"
            android:paddingLeft="@dimen/margin_card"
            android:paddingRight="@dimen/margin_card"
            android:text="THIS IS THE TITLE"
            android:textColor="@color/md_white_1000" />

        <Button
            android:id="@+id/carditem_btn_upvote"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:text="upvote" />

    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/carditem_txt_description"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:layout_margin="@dimen/margin_card"/>

</RelativeLayout>