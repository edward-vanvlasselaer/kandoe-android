<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/custom_chat_message"
    android:orientation="vertical">

    <TextView
        android:id="@+id/chat_txt_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/margin_card"
        android:paddingTop="@dimen/margin_card"
        android:text="Medium Text"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textSize="12dp"
        android:textColor="@color/md_blue_400"/>

    <TextView
        android:id="@+id/chat_txt_msg"
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:padding="@dimen/margin_card"
        android:textSize="14dp"
        android:text="Medium Text"
        android:textAppearance="?android:attr/textAppearanceMedium" />

</LinearLayout>