<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cardlist_item"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/custom_card_item"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/organisation_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/md_blue_grey_700">

        <TextView
            android:id="@+id/organisation_txt_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:text="THIS IS THE TITLE"
            android:textColor="@color/md_white_1000" />

        <Button
            android:id="@+id/organisation_btn_join"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:text="Join" />
    </RelativeLayout>

    <TextView
        android:id="@+id/carditem_txt_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/organisation_title"
        android:maxHeight="75dp" />

    <ImageView
        android:id="@+id/organisation_imgview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/organisation_title" />

</RelativeLayout>